# OpenAI Configuration
OPENAI_API_KEY=sk-...
LLM_MODEL_INTENT=gpt-4.1-nano
LLM_MODEL_AGENT=gpt-4.1-mini

# Database (optional - defaults to SQLite)
DATABASE_URL=sqlite:///bluedeem.db
# For PostgreSQL: DATABASE_URL=postgresql://user:password@localhost/bluedeem

# Cache TTL in seconds
CACHE_TTL=3600

# Platform Webhook Secrets
WHATSAPP_WEBHOOK_SECRET=your_whatsapp_webhook_secret
WHATSAPP_VERIFY_TOKEN=your_whatsapp_verify_token
INSTAGRAM_WEBHOOK_SECRET=your_instagram_webhook_secret
TIKTOK_WEBHOOK_SECRET=your_tiktok_webhook_secret

# Google Apps Script (optional)
GOOGLE_APPS_SCRIPT_URL=https://script.google.com/macros/s/...

# Rate Limiting
RATE_LIMIT_PER_MINUTE=10

# Timezone
TIMEZONE=Asia/Riyadh

# Logging
LOG_LEVEL=INFO

# Google Sheets (optional - if enabled, will use Google Sheets instead of CSV)
GOOGLE_SHEETS_ENABLED=false
GOOGLE_SHEETS_ID=your_spreadsheet_id_here
GOOGLE_SHEETS_CREDENTIALS=path/to/service-account-key.json
GOOGLE_SHEETS_DOCTORS_SHEET=01_doctors
GOOGLE_SHEETS_BRANCHES_SHEET=02_branches
GOOGLE_SHEETS_SERVICES_SHEET=03_services
GOOGLE_SHEETS_AVAILABILITY_SHEET=04_doctor_availability
